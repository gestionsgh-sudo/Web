function Field({ label, value }: { label: string; value: string }) {
  return (
    <label className="block">
      <span className="text-xs text-slate-500">{label}</span>
      <div className="mt-1 px-3 py-2 rounded-xl border border-slate-200 bg-slate-50 text-sm text-slate-700">{value}</div>
    </label>
  );
}

function Badge({ label }: { label: string }) {
  return (
    <div className="inline-flex items-center gap-2 px-3 py-2 rounded-xl bg-slate-50 border border-slate-200 text-xs font-medium text-slate-700">
      <CheckCircle2 className="h-4 w-4 text-[#0AA6A6]" /> {label}
    </div>
  );
}
